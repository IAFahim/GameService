@page "/templates"
@attribute [Authorize]
@rendermode InteractiveServer
@inject GameAdminService AdminService
@inject NavigationManager Nav
@using GameService.ServiceDefaults.DTOs

<PageTitle>Room Templates</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Room Templates</h1>
    <button class="btn btn-primary" @onclick="() => showModal = true">
        <i class="bi bi-plus-lg"></i> New Template
    </button>
</div>

@if (templates == null)
{
    <div class="spinner-border text-primary"></div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-4">
        @foreach (var t in templates)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title d-flex justify-content-between">
                            @t.Name
                            <span class="badge bg-secondary">@t.GameType</span>
                        </h5>
                        <ul class="list-unstyled small mb-3">
                            <li><i class="bi bi-people me-2"></i>Max Players: @t.MaxPlayers</li>
                            <li><i class="bi bi-coin me-2"></i>Entry Fee: @t.EntryFee</li>
                            @if (!string.IsNullOrEmpty(t.ConfigJson)) {
                                <li class="text-truncate" title="@t.ConfigJson"><i class="bi bi-gear me-2"></i>Config: @t.ConfigJson</li>
                            }
                        </ul>
                        <div class="d-flex gap-2">
                            <button class="btn btn-sm btn-success flex-grow-1" @onclick="() => LaunchGame(t.Id)">
                                <i class="bi bi-play-circle me-1"></i> Launch Room
                            </button>
                            <button class="btn btn-sm btn-outline-danger" @onclick="() => Delete(t.Id)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (showModal)
{
    <div class="modal fade show d-block" style="background: rgba(0,0,0,0.5)">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create Template</h5>
                    <button type="button" class="btn-close" @onclick="() => showModal = false"></button>
                </div>
                <div class="modal-body">
                    <EditForm Model="newTemplate" OnSubmit="CreateTemplate">
                        <div class="mb-3">
                            <label>Name</label>
                            <InputText @bind-Value="newTemplate.Name" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label>Game Type</label>
                            <InputSelect @bind-Value="newTemplate.GameType" class="form-select">
                                <option value="Ludo">Ludo</option>
                                <option value="LuckyMine">LuckyMine</option>
                            </InputSelect>
                        </div>
                        <div class="row g-2 mb-3">
                            <div class="col">
                                <label>Max Players</label>
                                <InputNumber @bind-Value="newTemplate.MaxPlayers" class="form-control" />
                            </div>
                            <div class="col">
                                <label>Entry Fee</label>
                                <InputNumber @bind-Value="newTemplate.EntryFee" class="form-control" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label>Config JSON (Optional)</label>
                            <InputTextArea @bind-Value="newTemplate.ConfigJson" class="form-control" placeholder='{"TotalMines": 20}' />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Create</button>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<GameTemplateDto>? templates;
    private bool showModal;
    private CreateTemplateRequest newTemplate = new() { Name = "", GameType = "Ludo", MaxPlayers = 4, EntryFee = 100 };

    protected override async Task OnInitializedAsync() => await Load();

    private async Task Load() => templates = await AdminService.GetTemplatesAsync();

    private async Task CreateTemplate()
    {
        await AdminService.CreateTemplateAsync(newTemplate);
        showModal = false;
        newTemplate = new() { Name = "", GameType = "Ludo", MaxPlayers = 4, EntryFee = 100 };
        await Load();
    }

    private async Task Delete(int id)
    {
        await AdminService.DeleteTemplateAsync(id);
        await Load();
    }

    private async Task LaunchGame(int templateId)
    {
        var roomId = await AdminService.CreateGameFromTemplateAsync(templateId);
        if (!string.IsNullOrEmpty(roomId))
        {
            Nav.NavigateTo($"games/{roomId}");
        }
    }
}