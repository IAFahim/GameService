@page "/"
@using Microsoft.AspNetCore.Authorization
@using GameService.ServiceDefaults.DTOs
@using System.Security.Claims
@using GameService.Web.Services

@attribute [Authorize]
@rendermode InteractiveServer
@implements IDisposable

@inject GameAdminService AdminService
@inject AuthenticationStateProvider AuthStateProvider
@inject PlayerUpdateNotifier Notifier

<PageTitle>Player Management</PageTitle>

<h1>Player Management <span class="badge bg-success small align-middle">Live</span></h1>

@if (users == null)
{
    <p><em>Loading users...</em></p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
            <tr>
                <th>Profile ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Coins</th>
                <th class="text-end">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in users)
            {
                var isMe = user.UserId == currentUserId;
                var rowClass = isMe ? "table-info" : (updatedUserIds.Contains(user.UserId) ? "table-warning" : "");
                
                <tr class="@rowClass" @key="user.UserId" data-testid="user-row-@user.UserId">
                    <td>@user.ProfileId</td>
                    <td>@user.Username @(isMe ? "(You)" : "")</td>
                    <td>@user.Email</td>
                    <td>
                        @user.Coins.ToString("N0")
                        <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="() => EditCoins(user)">
                            <i class="bi bi-pencil"></i>
                        </button>
                    </td>
                    <td class="text-end">
                        <button class="btn btn-danger btn-sm" 
                                @onclick="() => DeleteUser(user.UserId)"
                                disabled="@isMe"
                                title="@(isMe ? "You cannot remove yourself" : "Delete User")"
                                data-testid="delete-user-@user.UserId">
                            Delete
                        </button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

@if (editingUser != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Coins for @editingUser.Username</h5>
                    <button type="button" class="btn-close" @onclick="CloseEdit"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Amount to Add (use negative to subtract)</label>
                        <input type="number" class="form-control" @bind="coinAmount" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseEdit">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveCoins">Save</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<AdminPlayerDto>? users;
    private string? currentUserId;
    private readonly HashSet<string> updatedUserIds = new();
    
    private AdminPlayerDto? editingUser;
    private long coinAmount;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        currentUserId = authState.User.FindFirstValue(ClaimTypes.NameIdentifier);
        
        await LoadUsers();

        Notifier.OnPlayerUpdated += HandleUpdate;
    }

    private void HandleUpdate(PlayerUpdatedMessage msg)
    {
        _ = InvokeAsync(() =>
        {
            if (users is null) return;

            var userIndex = users.FindIndex(u => u.UserId == msg.UserId);
            
            if (userIndex != -1)
            {
                users[userIndex] = users[userIndex] with { Coins = msg.NewCoins };
            }
            else if (!string.IsNullOrEmpty(msg.Username))
            {
                users.Insert(0, new AdminPlayerDto(
                    0, msg.UserId,
                    msg.Username,
                    msg.Email ?? "Unknown",
                    msg.NewCoins
                ));
            }

            updatedUserIds.Add(msg.UserId);
            StateHasChanged();

            _ = Task.Delay(1000).ContinueWith(_ => InvokeAsync(() => 
            {
                updatedUserIds.Remove(msg.UserId);
                StateHasChanged();
            }));
        });
    }

    private void EditCoins(AdminPlayerDto user)
    {
        editingUser = user;
        coinAmount = 0;
    }

    private void CloseEdit()
    {
        editingUser = null;
    }

    private async Task SaveCoins()
    {
        if (editingUser == null || coinAmount == 0) return;

        try 
        {
            await AdminService.UpdatePlayerCoinsAsync(editingUser.UserId, coinAmount);
        }
        catch (Exception ex)
        {
            // In a real app, show error toast
            Console.WriteLine($"Error updating coins: {ex.Message}");
        }

        CloseEdit();
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        users = await AdminService.GetPlayersAsync();
    }

    private async Task DeleteUser(string userId)
    {
        if (string.IsNullOrEmpty(userId) || userId == currentUserId) return;

        try
        {
            await AdminService.DeletePlayerAsync(userId);
            await LoadUsers();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting user: {ex.Message}");
        }
    }

    [Inject] NavigationManager Nav { get; set; } = default!;

    public void Dispose()
    {
        Notifier.OnPlayerUpdated -= HandleUpdate;
    }
}