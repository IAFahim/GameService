@page "/games/{RoomId}"
@attribute [Authorize]
@inject GameAdminService AdminService
@inject NavigationManager Nav
@using GameService.Ludo.Components

<PageTitle>Game Inspector: @RoomId</PageTitle>

<div class="mb-3">
    <a href="games" class="btn btn-outline-secondary">&larr; Back to Games</a>
</div>

@if (game == null)
{
    if (notFound)
    {
        <div class="alert alert-danger">Game not found.</div>
    }
    else
    {
        <div class="spinner-border text-primary" role="status"></div>
    }
}
else
{
    @if (game.Meta.GameType == "Ludo")
    {
        <LudoAdminPanel Game="@game" 
                        OnRefresh="LoadGame" 
                        OnForceRoll="ForceRoll" 
                        OnTerminate="DeleteGame" />
    }
    else
    {
        <div class="alert alert-warning">Unknown game type: @game.Meta.GameType</div>
    }
}

@code {
    [Parameter] public string RoomId { get; set; } = "";
    
    private LudoContext? game;
    private bool notFound = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadGame();
    }

    private async Task LoadGame()
    {
        var games = await AdminService.GetActiveGamesAsync();
        game = games.FirstOrDefault(g => g.RoomId == RoomId);
        
        if (game == null) notFound = true;
        else notFound = false;
    }

    private async Task ForceRoll(int value)
    {
        try 
        {
            await AdminService.ForceRollAsync(RoomId, value);
            await Task.Delay(500); // Wait for propagation
            await LoadGame();
        }
        catch (Exception ex)
        {
            await JSRuntime.InvokeVoidAsync("alert", "Failed to force roll: " + ex.Message);
        }
    }

    private async Task DeleteGame()
    {
        if (!await JSRuntime.InvokeAsync<bool>("confirm", "Terminate this game?")) return;
        
        await AdminService.DeleteGameAsync(RoomId);
        Nav.NavigateTo("games");
    }

    [Inject] IJSRuntime JSRuntime { get; set; } = default!;
}