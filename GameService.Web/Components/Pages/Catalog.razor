@page "/catalog"
@attribute [Authorize]
@rendermode InteractiveServer
@inject GameAdminService AdminService
@inject NavigationManager Nav
@using GameService.ServiceDefaults.DTOs

<PageTitle>Game Catalog</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Game Catalog</h1>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @if (games == null) { <p>Loading...</p> }
    else
    {
        @foreach (var game in games)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center">
                        <div class="mb-3 display-4 text-primary">
                            <i class="bi bi-joystick"></i>
                        </div>
                        <h3 class="card-title">@game.Name</h3>
                        <p class="text-muted">Fully supported game module.</p>
                        
                        <button class="btn btn-primary w-100" @onclick="() => OpenCreateModal(game.Name)">
                            <i class="bi bi-plus-circle"></i> Create New Room
                        </button>
                    </div>
                </div>
            </div>
        }
    }
</div>

@if (showModal)
{
    <div class="modal fade show d-block" style="background: rgba(0,0,0,0.5)">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create @selectedGame Room</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <label class="form-label">Max Players</label>
                    <select class="form-select" @bind="playerCount">
                        <option value="2">2 Players</option>
                        <option value="3">3 Players</option>
                        <option value="4">4 Players</option>
                    </select>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button class="btn btn-success" @onclick="CreateGame">Launch</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<SupportedGameDto>? games;
    private bool showModal = false;
    private string selectedGame = "";
    private int playerCount = 4;

    protected override async Task OnInitializedAsync() => games = await AdminService.GetSupportedGamesAsync();

    private void OpenCreateModal(string gameName)
    {
        selectedGame = gameName;
        showModal = true;
    }

    private void CloseModal() => showModal = false;

    private async Task CreateGame()
    {
        await AdminService.CreateGameAsync(selectedGame, playerCount);
        showModal = false;
        Nav.NavigateTo("games"); // Redirect to Active Games list
    }
}
