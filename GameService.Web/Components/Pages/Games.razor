@page "/games"
@attribute [Authorize]
@rendermode InteractiveServer
@inject GameAdminService AdminService
@using GameService.GameCore

<PageTitle>Active Games</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Active Games</h1>
    <button class="btn btn-outline-secondary" @onclick="LoadGames">
        <i class="bi bi-arrow-clockwise"></i> Refresh
    </button>
</div>

@if (games != null && games.Any())
{
    <div class="list-group shadow-sm">
        @foreach (var game in games)
        {
            <div class="list-group-item list-group-item-action p-3">
                <div class="d-flex w-100 justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">
                            <span class="badge bg-info me-2">@game.GameType</span>
                            Room: <span class="font-monospace">@game.RoomId</span>
                        </h5>
                        <small class="text-muted">
                            <i class="bi bi-people-fill"></i> @game.PlayerCount / @game.MaxPlayers Players
                            | @(game.IsPublic ? "Public" : "Private")
                        </small>
                    </div>
                    <a href="games/@game.RoomId" class="btn btn-primary">
                        Manage / Play <i class="bi bi-chevron-right"></i>
                    </a>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5 text-muted">
        <i class="bi bi-inbox display-1"></i>
        <p class="mt-3">No active games.</p>
        <a href="catalog" class="btn btn-outline-primary">Go to Catalog</a>
    </div>
}

@code {
    private List<GameRoomDto>? games;
    protected override async Task OnInitializedAsync() => await LoadGames();
    private async Task LoadGames() => games = await AdminService.GetActiveGamesAsync();
}
