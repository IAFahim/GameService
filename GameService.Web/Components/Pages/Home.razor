@page "/"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.EntityFrameworkCore
@using GameService.ServiceDefaults.Data
@using GameService.ServiceDefaults.DTOs
@using System.Security.Claims
@using GameService.Web.Services

@attribute [Authorize]
@rendermode InteractiveServer
@implements IDisposable

@inject IDbContextFactory<GameDbContext> DbFactory
@inject UserManager<ApplicationUser> UserManager
@inject AuthenticationStateProvider AuthStateProvider
@inject PlayerUpdateNotifier Notifier

<PageTitle>Player Management</PageTitle>

<h1>Player Management <span class="badge bg-success small align-middle">Live</span></h1>

@if (users == null)
{
    <p><em>Loading users...</em></p>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
            <tr>
                <th>Profile ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Coins</th>
                <th class="text-end">Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var user in users)
            {
                var isMe = user.UserId == currentUserId;
                var rowClass = isMe ? "table-info" : (updatedUserIds.Contains(user.UserId) ? "table-warning" : "");
                
                <tr class="@rowClass" @key="user.UserId" data-testid="user-row-@user.UserId">
                    <td>@user.ProfileId</td>
                    <td>@user.Username @(isMe ? "(You)" : "")</td>
                    <td>@user.Email</td>
                    <td>
                        @user.Coins.ToString("N0")
                        <button class="btn btn-sm btn-outline-secondary ms-2" @onclick="() => EditCoins(user)">
                            <i class="bi bi-pencil"></i>
                        </button>
                    </td>
                    <td class="text-end">
                        <button class="btn btn-danger btn-sm" 
                                @onclick="() => DeleteUser(user.ProfileId)"
                                disabled="@isMe"
                                title="@(isMe ? "You cannot remove yourself" : "Delete User")"
                                data-testid="delete-user-@user.UserId">
                            Delete
                        </button>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}

@if (editingUser != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Coins for @editingUser.Username</h5>
                    <button type="button" class="btn-close" @onclick="CloseEdit"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Amount to Add (use negative to subtract)</label>
                        <input type="number" class="form-control" @bind="coinAmount" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseEdit">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveCoins">Save</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<UserViewModel>? users;
    private string? currentUserId;
    private readonly HashSet<string> updatedUserIds = new();
    
    private UserViewModel? editingUser;
    private long coinAmount;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        currentUserId = authState.User.FindFirstValue(ClaimTypes.NameIdentifier);
        
        await LoadUsers();

        Notifier.OnPlayerUpdated += HandleUpdate;
    }

    private void HandleUpdate(PlayerUpdatedMessage msg)
    {
        _ = InvokeAsync(() =>
        {
            if (users is null) return;

            var userIndex = users.FindIndex(u => u.UserId == msg.UserId);
            
            if (userIndex != -1)
            {
                users[userIndex] = users[userIndex] with { Coins = msg.NewCoins };
            }
            else if (!string.IsNullOrEmpty(msg.Username))
            {
                users.Insert(0, new UserViewModel(
                    0, msg.UserId,
                    msg.Username,
                    msg.Email ?? "Unknown",
                    msg.NewCoins
                ));
            }

            updatedUserIds.Add(msg.UserId);
            StateHasChanged();

            _ = Task.Delay(1000).ContinueWith(_ => InvokeAsync(() => 
            {
                updatedUserIds.Remove(msg.UserId);
                StateHasChanged();
            }));
        });
    }

    private void EditCoins(UserViewModel user)
    {
        editingUser = user;
        coinAmount = 0;
    }

    private void CloseEdit()
    {
        editingUser = null;
    }

    private async Task SaveCoins()
    {
        if (editingUser == null || coinAmount == 0) return;

        // We need an endpoint for admin to update coins without transaction limits?
        // Or just use the transaction endpoint but impersonating?
        // For now, let's use the EconomyService directly via a new Admin endpoint or just direct DB access since this is server-side Blazor.
        // Direct DB access is easiest for this "God Mode" feature.
        
        using var db = await DbFactory.CreateDbContextAsync();
        var profile = await db.PlayerProfiles.FirstOrDefaultAsync(p => p.UserId == editingUser.UserId);
        if (profile != null)
        {
            profile.Coins += coinAmount;
            await db.SaveChangesAsync();
            
            // Notify updates
            var user = await db.Users.FindAsync(editingUser.UserId);
            var message = new PlayerUpdatedMessage(editingUser.UserId, profile.Coins, user?.UserName, user?.Email);
            Notifier.Notify(message);
        }

        CloseEdit();
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        using var db = await DbFactory.CreateDbContextAsync();
        
        users = await db.PlayerProfiles
            .AsNoTracking()
            .Include(p => p.User)
            .OrderBy(p => p.Id)
            .Select(p => new UserViewModel(
                p.Id,
                p.UserId,
                p.User.UserName ?? "Unknown",
                p.User.Email ?? "No Email",
                p.Coins
            ))
            .ToListAsync();
    }

    private async Task DeleteUser(int profileId)
    {
        if (profileId == 0) 
        {
            await LoadUsers();
            return; 
        }

        using var db = await DbFactory.CreateDbContextAsync();
        var profile = await db.PlayerProfiles
            .Include(p => p.User)
            .FirstOrDefaultAsync(p => p.Id == profileId);
        
        if (profile is not null)
        {
            if (profile.UserId == currentUserId) return;

            db.Users.Remove(profile.User);
            await db.SaveChangesAsync();
            
            await LoadUsers();
        }
    }

    [Inject] NavigationManager Nav { get; set; } = default!;

    public void Dispose()
    {
        Notifier.OnPlayerUpdated -= HandleUpdate;
    }

    public record UserViewModel(int ProfileId, string UserId, string Username, string Email, long Coins);
}