@page "/catalog"
@using GameService.ServiceDefaults.DTOs
@attribute [Authorize]
@rendermode InteractiveServer
@inject GameAdminService AdminService
@inject NavigationManager Nav

<PageTitle>Game Catalog</PageTitle>

<div class="container-fluid">
    <PageHeader Title="Game Catalog" Subtitle="Browse supported modules and launch new rooms">
        <Actions>
            <div class="input-group" style="max-width: 320px;">
                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                <input class="form-control" placeholder="Search games..." aria-label="Search games" @bind="search" />
            </div>
            <a class="btn btn-outline-secondary" href="templates">
                <i class="bi bi-file-earmark-code"></i> Templates
            </a>
        </Actions>
    </PageHeader>

    @if (games == null)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
        </div>
    }
    else if (!FilteredGames.Any())
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-search display-6"></i>
            <p class="mt-2 mb-0">No games match “@search”.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var game in FilteredGames)
            {
                <div class="col">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body text-center">
                            <div class="mb-3 display-4 text-primary">
                                <i class="bi bi-joystick"></i>
                            </div>
                            <h3 class="card-title mb-1">@game.Name</h3>
                            <div class="small text-muted mb-3">@game.Type</div>

                            <button class="btn btn-primary w-100" @onclick="() => OpenCreateModal(game)">
                                <i class="bi bi-plus-circle"></i> Create Room
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (showModal)
{
    <div class="modal fade show d-block" style="background: rgba(0,0,0,0.5)">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Create @selectedGameName Room</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Player Capacity (Max 20)</label>
                        <input type="number" class="form-control" @bind="playerCount" min="1" max="20"/>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Entry Fee (Coins)</label>
                        <input type="number" class="form-control" @bind="entryFee" min="0" step="10"/>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Config JSON <small class="text-muted">(Optional)</small></label>
                        <textarea class="form-control" @bind="configJson" placeholder='{"TotalMines": 20}'
                                  rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button class="btn btn-success" @onclick="CreateGame">
                        Launch Room <i class="bi bi-rocket-takeoff-fill ms-2"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<SupportedGameDto>? games;
    private bool showModal;

    private string search = "";

    private string selectedGameType = "";
    private string selectedGameName = "";

    private IEnumerable<SupportedGameDto> FilteredGames =>
        games?.Where(g =>
            string.IsNullOrWhiteSpace(search) ||
            g.Name.Contains(search, StringComparison.OrdinalIgnoreCase) ||
            g.Type.Contains(search, StringComparison.OrdinalIgnoreCase))
        ?? Enumerable.Empty<SupportedGameDto>();

    private int playerCount = 4;
    private long entryFee;
    private string? configJson;

    protected override async Task OnInitializedAsync()
    {
        games = await AdminService.GetSupportedGamesAsync();
    }

    private void OpenCreateModal(SupportedGameDto game)
    {
        selectedGameType = game.Type;
        selectedGameName = game.Name;

        if (selectedGameType == "LuckyMine")
        {
            playerCount = 20;
            configJson = "{\"TotalMines\": 20}";
        }
        else
        {
            playerCount = 4;
            configJson = null;
        }

        entryFee = 0;
        showModal = true;
    }

    private void CloseModal()
    {
        showModal = false;
    }

    private async Task CreateGame()
    {
        if (playerCount < 1) playerCount = 1;
        if (playerCount > 20) playerCount = 20;

        var roomId = await AdminService.CreateGameAsync(selectedGameType, playerCount, entryFee, configJson);
        showModal = false;

        if (!string.IsNullOrEmpty(roomId))
        {
            Nav.NavigateTo($"games/{roomId}");
        }
    }

}